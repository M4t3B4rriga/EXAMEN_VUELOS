@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Buscar Vuelos</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('/Content/imagenes/menu.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            color: #fff;
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
            width: 350px;
        }

            .form-container h2 {
                margin-bottom: 20px;
                font-size: 24px;
            }

            .form-container label {
                display: block;
                margin: 10px 0 5px;
                font-weight: bold;
            }

            .form-container input {
                width: 90%;
                padding: 8px;
                margin-bottom: 15px;
                border: none;
                border-radius: 5px;
            }

            .form-container button {
                background-color: #4CAF50;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .form-container button:hover {
                    background-color: #45a049;
                }

        .back-button {
            background-color: #2196F3;
        }

            .back-button:hover {
                background-color: #0b7dda;
            }

        .error {
            color: red;
            font-weight: bold;
        }

        .results {
            margin-top: 20px;
            text-align: left;
        }

            .results ul {
                list-style: none;
                padding: 0;
            }

            .results li {
                background: rgba(255,255,255,0.1);
                padding: 8px;
                margin-bottom: 5px;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Buscar Vuelos</h2>

        @if (ViewBag.Error != null)
        {
            <p class="error">@ViewBag.Error</p>
        }

        <form method="post">
            <label>Ciudad Origen:</label>
            <input type="text" name="origen" />

            <label>Ciudad Destino:</label>
            <input type="text" name="destino" />

            <label>Fecha (YYYY-MM-DD):</label>
            <input type="date" name="fecha" />

            <button type="submit">Buscar</button>
        </form>

        @if (ViewBag.Vuelos != null)
        {
            <div class="results">
                <h3>Resultados:</h3>
                <ul>
                    @foreach (var vuelo in ViewBag.Vuelos)
                    {
                        <li>@vuelo.ciudad_origen → @vuelo.ciudad_destino | $@vuelo.valor | Fecha: @vuelo.hora_salida.ToShortDateString()</li>
                    }
                </ul>
            </div>
        }

        <form action="/Home/Menu" method="get">
            <button type="submit" class="back-button">Regresar al Menú</button>
        </form>
    </div>
</body>
</html>
